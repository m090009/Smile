<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faceTrackerActivity.FaceTrackerActivity"
    style="@style/FaceTracker">

    <com.tohamy.smile.ui.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <com.tohamy.smile.ui.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.tohamy.smile.ui.CameraSourcePreview>

    <TextView
        android:id="@+id/funnyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:background="#000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginRight="5dp">
            <!--<TextView-->
                <!--android:id="@+id/numberOfFaces"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="20sp"-->
                <!--android:textColor="#ffffff"-->
                <!--android:text="0"-->
                <!--android:layout_gravity="center"-->
                <!--android:padding="10dp"/>-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sentiment_dissatisfied_white_36dp"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/smileMeter"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:max="100"
                android:progress="78"
                android:indeterminate="false"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:progressTint="@color/smileYellow_Dark"
                android:progressBackgroundTint="@color/smileYellow"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sentiment_satisfied_white_36dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchCamera"
            android:background="@drawable/camera_switch_button"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/smileYellow"
        android:visibility="invisible">
    </View>
    <RelativeLayout
        android:id="@+id/imagePreviewCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:background="#000000">
        <android.support.v7.widget.CardView

            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:contentPadding="6dp"
            style="@style/CardView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:actualImageScaleType="none"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    >
                    <!--<ImageButton-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:src="@drawable/ic_clear_black_48dp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:background="?attr/selectableItemBackground" />-->
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="acceptPicture"
                        android:src="@drawable/ic_done_black_48dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <ImageView
        android:id="@+id/smileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tag_faces_black_48dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />
</RelativeLayout>